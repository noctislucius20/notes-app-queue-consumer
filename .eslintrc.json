{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "indent": ["error", 4],
        "no-underscore-dangle": [
            "error",
            { "allowAfterThis": true, "allow": ["_exports"] }
        ],
        "camelcase": [
            "error",
            { "ignoreDestructuring": true, "properties": "never" }
        ]
    }
}
